{
    "name": "spiral/tokenizer",
    "type": "library",
    "description": "Static Analysis: Class and Invocation locators",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/tokenizer"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        },
        {
            "name": "Pavel Butchnev (butschster)",
            "email": "pavel.buchnev@spiralscout.com"
        },
        {
            "name": "Aleksei Gagarin (roxblnfk)",
            "email": "alexey.gagarin@spiralscout.com"
        },
        {
            "name": "Maksim Smakouz (msmakouz)",
            "email": "maksim.smakouz@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-tokenizer": "*",
        "spiral/core": "^3.7.1",
        "spiral/logger": "^3.7.1",
        "symfony/finder": "^5.3.7|^6.0"
    },
    "require-dev": {
        "spiral/attributes": "^2.8|^3.0",
        "spiral/boot": "^3.7.1",
        "spiral/files": "^3.7.1",
        "phpunit/phpunit": "^9.5.20",
        "vimeo/psalm": "^5.9"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Tokenizer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Tokenizer\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.8.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
